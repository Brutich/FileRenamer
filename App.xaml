<Application x:Class="FileRenamer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FileRenamer">

    <Application.Resources>        
        <Style TargetType="Button" x:Key="Base">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5,3,5,3"/>
            <Setter Property="Button.Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Direction="320" 
                                      ShadowDepth="3"
                                      BlurRadius="5"
                                      Opacity="0.5" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="Default" BasedOn="{StaticResource Base}">
            <Setter Property="Background" Value="#FF44A9EC"/>
        </Style>

        <Style TargetType="Button" x:Key="Error" BasedOn="{StaticResource Base}">
            <Setter Property="Background" Value="Black"/>
        </Style>
        
    </Application.Resources>
</Application>

<Window x:Class="FileRenamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileRenamer"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" Background="White">

    <Window.Resources>
        
        <Style TargetType="Button" x:Key="Base">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5,3,5,3"/>
            <Setter Property="Button.Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Direction="320" 
                                      ShadowDepth="3"
                                      BlurRadius="5"
                                      Opacity="0.5" />
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="Button" x:Key="Default" BasedOn="{StaticResource Base}">
            <Setter Property="Background" Value="#FF44A9EC"/>
        </Style>

        <Style TargetType="Button" x:Key="Error" BasedOn="{StaticResource Base}">
            <Setter Property="Background" Value="Black"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="LightGray">
            <Button Content="New" Style="{StaticResource Default}" />
            <Button Content="Open" Style="{StaticResource Error}" />
            <Button Content="Save" Style="{StaticResource Error}"/>
        </StackPanel>


        <Grid Grid.Column="1" Background="WhiteSmoke">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="200*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Width="200"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">                
                
                <TextBlock Name="MainTextBlock"
                           FontSize="30" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="Content" />
                
                <TextBlock Name="ExtraTextBlock"
                           FontSize="30" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="{Binding Clicks}" />
                
                <CheckBox Name="check"
                          Margin="5"
                          Content="Checker"/>

                <TextBox Margin="5" IsEnabled="{Binding ElementName=check, Path=IsChecked}"/>

                <TextBox Margin="5"/>               

            </StackPanel>

            
            <ScrollViewer Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto">
                
                <StackPanel Width="300"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">

                    <TextBox Margin="5"/>

                </StackPanel>

            </ScrollViewer>
            
        </Grid>

    </Grid>



</Window>

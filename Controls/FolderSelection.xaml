<UserControl x:Class="FileRenamer.Controls.FolderSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileRenamer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   Margin="0"                   
                   Text="Label:" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>
        
        <TextBox Grid.Column="1"
                 Margin="5,0,5,0"
                 Text="FolderPath" VerticalAlignment="Center"/>

        <Button Grid.Column="2" Margin="0"
                Style="{DynamicResource Error}"
                Content="Browse..."
                Click="OpenFolderDialog" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
